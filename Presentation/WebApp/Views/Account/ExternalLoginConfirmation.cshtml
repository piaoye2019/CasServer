@model CASServer.Models.RegisterExternalLoginModel
@{
    this.ViewBag.Title = "注册";
}

<hgroup class="title">
    <h1>@this.ViewBag.Title.</h1>
    <h2>关联你的 @this.ViewBag.ProviderDisplayName 帐户。</h2>
</hgroup>

@using (this.Html.BeginForm("ExternalLoginConfirmation", "Account", new {ReturnUrl = this.ViewBag.ReturnUrl}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>关联表单</legend>
        <p>
            你已成功地使用 <strong>@this.ViewBag.ProviderDisplayName</strong> 进行身份验证。
            请在下面输入此站点的用户名，然后单击“确认”按钮完成
            登录。
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="注册" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}